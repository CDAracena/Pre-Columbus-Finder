<div class="container has-text-centered mainUserContainer">
  <div class="column has-text-centered is-size-2 signUpText">
    <h1>Log In</h1>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="columns is-centered">
    <div class="column is-one-third">
      <div class="field">
        <p> Demo Email: test@test.com </p>
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input formFieldBoxShadow' %>
      </div>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="column is-one-third">
      <div class="field">
        <p> Demo Password: test123 </p>
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "off", class:'input formFieldBoxShadow' %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log In", class:'button is-danger is-outlined searchButton' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
